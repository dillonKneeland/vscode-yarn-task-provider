{
  "name": "yarn-task-provider",
  "displayName": "Yarn Task Provider",
  "description": "Automatic task detection for yarn package.json files.",
  "version": "0.2.3",
  "publisher": "dkneeland",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "yarn",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The yarn task to customize"
          },
          "args": {
            "type": "array",
            "default": [],
            "description": "Aditional args for the command"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "typescript": "^4.8.2",
    "@types/vscode": "^1.70.0"
  },
  "license": "MIT",
  "dependencies": {},
  "repository": "https://github.com/dillonKneeland/vscode-yarn-task-provider",
  "icon": "assets/yarn-logo-128x.png",
  "galleryBanner": {
    "color": "4684a1",
    "theme": "light"
  }
}